@model RegisterModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Net.Web.Admin</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<body>
    @* <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0"> *@
    <div class="my-24 mx-4 md:mx-14 lg:mx-24 xl:mx-96">
        <div class="flex justify-center">
            <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg"
                    alt="logo">Shop DotNet
            </a>
        </div>
        <div class="bg-white rounded-lg shadow dark:border dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1
                    class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Create an account
                </h1>
                <form class="space-y-4 md:space-y-6" asp-controller="Auth" asp-action="Register"
                    asp-route-returnUrl="@(Context.Request.Query["returnUrl"])">
                    @Html.AntiForgeryToken()
                    <div class="grid gap-4 grid-cols-1 lg:grid-cols-2">
                        <div class="form-control">
                            <label asp-for="FirstName"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <input asp-for="FirstName" class="input input-bordered w-full" />
                            <span asp-validation-for="FirstName" class="text-red-600"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="LastName"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <input asp-for="LastName" class="input input-bordered w-full" />
                            <span asp-validation-for="LastName" class="text-red-600"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="GenderId"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <select asp-for="GenderId" class="select select-bordered w-full"
                                asp-items="@Model.AvailableGenderOptions">
                            </select>
                            <span asp-validation-for="GenderId" class="text-red-600"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="PhoneNumber"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <label asp-for="PhoneNumber" class="input input-bordered flex items-center gap-2">
                                +880
                                <input asp-for="PhoneNumber" class="grow" />
                            </label>
                            <span asp-validation-for="PhoneNumber" class="text-red-600"></span>
                        </div>
                        <div class="form-control col-span-full">
                            <label asp-for="Email"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <input asp-for="Email" class="input input-bordered w-full" />
                            <span asp-validation-for="Email" class="text-red-600"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="Password"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <input asp-for="Password" class="input input-bordered w-full" />
                            <span asp-validation-for="Password" class="text-red-600"></span>
                        </div>
                        <div class="form-control">
                            <label asp-for="ConfirmPassword"
                                class="label text-sm font-medium text-gray-900 dark:text-white"></label>
                            <input asp-for="ConfirmPassword" class="input input-bordered w-full" />
                            <span asp-validation-for="ConfirmPassword" class="text-red-600"></span>
                        </div>
                    </div>
                    <button type="submit"
                        class="w-full btn-active text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">Register</button>
                    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                        Already have an account? <a
                            href="@(Url.Action("Login", "Auth", new { returnUrl = Context.Request.Query["returnUrl"] }))"
                            class="font-medium hover:underline">Login
                            here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</body>

<!-- Render footer scripts -->
@Html.Raw(ScriptTagHelper.RenderFooterScripts())


</html>